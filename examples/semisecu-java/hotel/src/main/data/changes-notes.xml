<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd
    http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="notesForHotelsTable" author="k">
		<!-- Notes -->
		<createTable tableName="HOTEL_NOTES">
			<column name="HOTELID" type="INT">
				<constraints nullable="false" />
			</column>
			<column name="USERID" type="INT">
				<constraints nullable="false" />
			</column>
			<column name="NOTE" type="INT">
				<constraints nullable="false" />
			</column>
		</createTable>
		<sql>
			alter table HOTEL_NOTES
			add constraint CK_HOTEL_NOTES
			check (note
			between 1 and 10);
		</sql>
		<addPrimaryKey tableName="HOTEL_NOTES" columnNames="HOTELID, USERID" />
		<addForeignKeyConstraint constraintName="FK_HOTEL_NOTES_HOTELID"
			referencedTableName="HOTELS" baseColumnNames="HOTELID" baseTableName="HOTEL_NOTES"
			referencedColumnNames="ID" />
		<addForeignKeyConstraint constraintName="FK_HOTEL_NOTES_USERID"
			referencedTableName="USERS" baseColumnNames="USERID" baseTableName="HOTEL_NOTES"
			referencedColumnNames="ID" />
	</changeSet>

</databaseChangeLog>